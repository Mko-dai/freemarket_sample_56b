.single1
  .single-header-top
    %h1
      = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1248199994", class: "mercari-icon-reg" ,alt:"mercari"),root_path
  .main-reg
    %h1.top-head 新規会員登録
    .main-section
      .send-buttons
        %button.submit-btn-mail{type:"submit",name:"submit",onclick:"location.href='/signup/member_information'"}メールアドレスで登録する
        %i.far.fa-envelope
        %br
        %button.submit-btn-fb{type:"submit",name:"submit"}
        = link_to "facebookで登録する", user_facebook_omniauth_authorize_path, class: "fare"
        = image_tag "snslogo/facebook.png",width:"26",height:"26",margin:"8px 0px 0px",class:"facebookicon2"
        %br
        %button.submit-btn-google{type:"submit",name:"submit"}
        = link_to "Googleで登録する", user_google_oauth2_omniauth_authorize_path, class: "goore"
        = image_tag "snslogo/google.png",width:"26",height:"26",margin:"8px",class:"googleicon2"
  = render partial:"/users/footerreg"