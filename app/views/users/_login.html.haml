%body
  .single-container_login
    %header.single-header
      %h1#logomer
        .registration
          =link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1248199994" ,alt:"mercari"),root_path
    %main.single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          = link_to "新規会員登録", new_user_registration_path, class: "al"
        .login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook-square
            Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            = image_tag "/images/google.png", class: "google_png"
            Googleでログイン
          .login-form-inner
            -# mishima サインイン機能 form_forの記述を追加
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|  
              .form-group
                =f.email_field :email,placeholder: "メールアドレス",class:"login-input-text-m input-default3"
              .form-group-pass
                =f.password_field :password,class:"login-input-text-p input-default3",placeholder: "パスワード"
              #rec.form-group-captcha
                 =recaptcha_tags
              =f.submit "ログイン",class:"login-submit btn-default btn-red"
            %input{name: "login_callback", type: "hidden", value: "https://www.mercari.com/jp/logout/"}/
            %input{name: "__csrf_value", type: "hidden", value: "26ea89e1dd87375f77e99d4df50841c563e9272145a02f50b086dddd1b02c5217c560682ac2d4e59a19aa0dc489633f22fcac3a893b3bd292e042ae86e24c075e"}/
            = link_to "パスワードをお忘れの方", "", class: "af"
