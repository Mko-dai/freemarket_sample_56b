%main.main_contents
  .main
    .upper
      .create
        .create__header
          %h2
            クレジットカード情報入力
        .create__main
          = form_tag('/card', method: :post, id: 'charge-form',  name: "inputForm") do
            .create__main__message
              %label
                カード番号
              %span.formrequire1
                必須
            .create__main__form
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .create__main__image
              = image_tag "cards/visa.svg",width:"49",height:"20"
              = image_tag "cards/master-card.svg",width:"34",height:"20"
              = image_tag "cards/saison-card.svg",width:"30",height:"20"
              = image_tag "cards/jcb.svg",width:"32",height:"20"
              = image_tag "cards/american_express.svg",width:"21",height:"20"
              = image_tag "cards/dinersclub.svg",width:"32",height:"20"
              = image_tag "cards/discover.svg",width:"32",height:"20"
            .create__main__message
              %label
                有効期限
              %span.formrequire1
                必須
            .create__main__year-month
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %label{class:"year-month"}
                月
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %label{class:"year-month"}
                年
            .create__main__message
              %label
                セキュリティコード
              %span.formrequire1
                必須
            .create__main__form
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .create__main__card-backside{onclick:"ShowCardBackside()"}
              %i.fas.fa-question-circle
              カード裏面の番号とは?
            #backside.hidden
              %div
                %i.fas.fa-caret-up.fa-2x
              .card.back.side.image
                カードの裏面をご参照ください
                = image_tag "card-backside.png",width:"240",height:"105",margin:"8px 0px 0px"
            #addbutton.create__main__button
              #card_token
              = submit_tag "追加する", id: "token_submit"
          %i#yajirushi1.fas.fa-chevron-down
          %i#yajirushi2.fas.fa-chevron-down