= render :partial => "header_login"
- breadcrumb :profile
= render "layouts/breadcrumbs"
%main.main_contents
  .main
    .upper
      .profile-edit
        .profile-edit__header
          %h2
            プロフィール
          = form_with(model: @user,local:true,url:users_path,method: :post) do |f|
            .profile-edit__user
              = image_tag("/images/member_photo_noimage.png")
              =f.text_field :nickname,value:@user.nickname,placeholder:"例)AYA☆セール中"
            .profile_edit__text
              =f.text_field :introduction,placeholder:"例)こんにちは☆ご覧いただきありがとうございます！",cols:"50",rows:"5",padding:"0",value:@user.introduction,id:"user_introduction"
            =f.submit "変更する",class:"change"
  = render partial:"sidebar"
= render partial:"footer"
= render partial:"sell_btn"