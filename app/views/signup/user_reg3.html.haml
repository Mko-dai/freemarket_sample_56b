  .user-reg4
    %main.main_contents-1
      .main
        .upper2
          %h2.information
            住所入力
          .user_info
            %div
              %p お客さまの本人情報をご登録ください。
              %p 登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
              %p.text_right
              = link_to "https://www.mercari.com/jp/help_center/article/495/", class: "text_right1" do
                = "本人確認書類のアップロードについて"
                %i.fas.fa-angle-right
            -#mishima 新規登録 form_withの記述を追加
            = form_with(model: @address, local: true,url:address_create_signup_index_path,method: :post)  do |f|      #mishima 新規登録 form_withの記述を追加
              .form_group
                = f.label :name,"お名前"
                %span.formrequire1
                  必須
                =f.text_field :last_name ,placeholder:"例)三島",class:"input-default",value:current_user.last_name    
                =f.text_field :first_name ,placeholder:"例)広大",class:"input-default",value:current_user.first_name   
              .form_group
                %label お名前カナ
                %span.formrequire1
                  必須
                =f.text_field :last_name_kana ,placeholder:"例)ミシマ",class:"input-default",value:current_user.last_name_kana    
                =f.text_field :last_name_kana ,placeholder:"例)コウダイ",class:"input-default",value:current_user.first_name_kana   
              .form_group
                =f.label :code,"郵便番号"
                %span.formrequire1
                  必須
                =f.text_field :code ,placeholder:"例) 123-4567",class:"input-default"
              .form_group
                =f.label :prefectures,"都道府県"
                %span.formrequire1
                  必須
                %i.fas.fa-chevron-down
                =f.collection_select :prefectures, Prefecture.all,:name,:name,prompt:"---"
              .form_group
                =f.label :city_town,"市町村"
                %span.formrequire1
                  必須
                =f.text_field :city_town,placeholder:"例) 横浜市緑区",class:"input-default"
              .form_group
                =f.label :address_number,"番地"
                %span.formrequire1
                  必須
                =f.text_field :address_number,placeholder:"例) 青山１−１−１",class:"input-default"
              .form_group
                =f.label :building,"建物"
                %span.any
                  任意
                =f.text_field :building,placeholder:"例) 柳ビル１０３",class:"input-default"
              .form_group
                =f.label :room_for_number, "電話"
                %span.any
                  任意
                =f.text_field :room_for_number,placeholder:"例) 09012345678",class:"input-default"
              =f.submit "次へ進む",class:"register_button"
              .form_group.text_right
                %p
                = link_to "https://www.mercari.com/jp/help_center/article/423/", class: "text_right2" do
                  = "本人情報の登録について"
                  %i.fas.fa-angle-right
